<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#00B8FF"
    android:layout_height="match_parent"
    tools:context=".MyNoteActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titlt_textview"
        android:textColor="@color/white"
        android:text="Add new note"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="28dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/roundercorner_edit_text"
        android:orientation="vertical">

        <EditText
            android:id="@+id/title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#3000B8FF"
            android:hint="Title"
            android:minHeight="48dp"
            android:padding="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_edit"
            android:padding="10dp"
            android:hint="Description"
            android:layout_margin="10dp"
            android:background="#3000B8FF"
            android:lines="10"
            android:gravity="top"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save note"
        android:layout_gravity="center"
        android:id="@+id/saveNote_edit"
        android:textColor="#00B8FF"
        android:backgroundTint="@color/white"/>
</LinearLayout>